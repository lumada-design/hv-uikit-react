{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "allowJs": true,
    "paths": {
      "@hv/uikit-react-core": ["./packages/core/src"],
      "@hv/uikit-react-core/*": ["./packages/core/src/*"],
    }
  },
  "exclude": ["**/dist/"]
}