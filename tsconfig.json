{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2015",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
      "@hitachivantara/uikit-react-core": ["packages/core/src"],
      "@hitachivantara/uikit-react-icons": ["packages/icons/bin"],
      "@hitachivantara/uikit-react-icons/dist/*": ["packages/icons/bin/*"],
      "@hitachivantara/uikit-styles": ["packages/styles/src"]
    },
    "preserveSymlinks": true,
    "noImplicitAny": false
  }
}
