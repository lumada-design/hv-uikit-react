{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es5",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@hitachivantara/uikit-core": ["packages/core/src"],
      "@hitachivantara/uikit-icons": ["packages/icons/bin"],
      "@hitachivantara/uikit-styles": ["packages/styles/src"]
    },
    "noImplicitAny": false,
    "preserveSymlinks": true
  },
  "exclude": ["**/dist", "**/node_modules", "**/*spec.ts*", "**/*.test.ts*"]
}
