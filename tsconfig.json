{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "paths": {
      ".storybook/*": ["./.storybook/*"],
      "~/*": ["./apps/app/src/*"]
    }
  },
  "include": [
    ".config/*.ts",
    "*.config.ts",
    ".storybook/**/*",
    "apps",
    "docs",
    "packages",
    "templates"
  ],
  "exclude": ["node_modules", "packages/*/dist", "packages/*/package"]
}
