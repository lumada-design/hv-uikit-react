{
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://nexus.pentaho.org/repository/public-npm-release/",
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": [
        "master",
        "alpha"
      ],
      "message": "[skip ci] chore(release): publish"
    }
  }
}
