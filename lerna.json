{
  "packages": ["packages/*", "automation/*"],
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://nexus.pentaho.org/repository/public-npm-release/"
    },
    "version": {
      "allowBranch": [
        "master",
        "alpha"
      ],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "githubRelease": true
    }
  }
}
