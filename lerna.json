{
  "packages": ["packages/*", "automation/*"],
  "version": "independent",
  "command": {
    "publish": {
      "npmClient": "npm",
      "registry": "https://nexus.pentaho.org/repository/public-npm-release/"
    },
    "version": {
      "allowBranch": ["master", "alpha", "next"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    }
  },
  "ignoreChanges": ["**/*.md"]
}
