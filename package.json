{
  "name": "hv-uikit-react",
  "version": "0.3.0",
  "description": "A collection of React Components for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/pentaho/hv-uikit-react",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pentaho/hv-uikit-react.git"
  },
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:package_clean": "npx lerna run clean --parallel",
    "clean:lerna": "npx lerna clean --yes ",
    "bootstrap": "npx lerna bootstrap",
    "dev": "npm-run-all dev:*",
    "dev:build": "npx lerna run build --scope \"@hv/uikit-react-icons\" --stream",
    "dev:storybook": "npx lerna run dev --parallel",
    "build": "npx lerna run build",
    "doc": "npx lerna run doc",
    "test": "npx lerna run test --parallel",
    "link": "npx lerna run link",
    "publish:prerelease": "npx lerna publish prerelease --yes --github-release",
    "publish:preminor": "npx lerna publish preminor --yes --github-release --force-publish=*",
    "publish:minor": "npx lerna publish minor --yes --github-release --force-publish=*",
    "publish:major": "npx lerna publish major --yes --github-release --force-publish=*",
    "lint": "npx eslint ./ --cache --ignore-pattern .gitignore",
    "lint:fix": "npx eslint ./ --cache --ignore-pattern .gitignore --fix",
    "lint:jenkins": "npx eslint -f checkstyle . > eslint.xml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "lerna": "3.13.1",
    "npm-run-all": "4.1.5",
    "npx": "10.2.0",
    "prettier": "^1.16.4"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "babel-eslint": "9.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "2.10.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-license-header": "0.1.2",
    "eslint-plugin-prettier": "2.7.0",
    "eslint-plugin-react": "7.12.4",
    "husky": "1.3.1"
  }
}
