{
  "name": "hv-uikit-react",
  "private": true,
  "author": "Hitachi Vantara UI Kit Team",
  "description": "The React component library for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/lumada-design/hv-uikit-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "pnpm -F='./app' dev",
    "doc": "start-storybook -p 6006 --no-manager-cache",
    "build": "pnpm -r -F='./packages/**' build",
    "build:doc": "build-storybook --docs -o dist --quiet",
    "test": "pnpm -F='./packages/**' test",
    "test:pa11y": "npx pa11y-ci -c config/pa11yci.config.js",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "pnpm lint --fix",
    "lint-staged": "lint-staged",
    "typecheck": "pnpm -r -F='./packages/**' typecheck",
    "publish:next": "pnpm build && npx lerna publish --yes --conventional-prerelease --preid next",
    "preinstall": "npx only-allow pnpm",
    "install": "npx husky install"
  },
  "devDependencies": {
    "@applitools/eyes-storybook": "^3.30.2",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@mui/material": "^5.11.0",
    "@playwright/test": "^1.27.1",
    "@storybook/addon-a11y": "^6.5.16",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/builder-vite": "^0.1.29",
    "@storybook/core-common": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jsdom": "^20.0.3",
    "lerna": "^6.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .ts,.tsx --cache",
      "pretty-quick --staged"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16.16.0"
  }
}
