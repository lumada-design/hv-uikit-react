{
  "name": "hv-uikit-react",
  "version": "0.3.0",
  "description": "A collection of React Components for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/pentaho/hv-uikit-react",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pentaho/hv-uikit-react.git"
  },
  "scripts": {
    "clean": "npm-run-all clean:*",
    "clean:package_clean": "npx lerna run clean --parallel",
    "clean:lerna": "npx lerna clean --yes ",
    "bootstrap": "npx lerna bootstrap",
    "dev": "npm-run-all dev:*",
    "dev:build": "npx lerna run build --scope \"@hv/uikit-react-icons\" --stream",
    "dev:storybook": "npx lerna run dev --parallel",
    "build": "npx lerna run build",
    "doc": "npx lerna run doc",
    "lint": "npx lerna run lint --parallel",
    "lint:jenkins": "npx lerna run lint:jenkins",
    "test": "npx lerna run test --parallel",
    "link": "npx lerna run link",
    "publish:prerelease": "npx lerna publish prerelease --yes",
    "publish:preminor": "npx lerna publish preminor --yes --force-publish=*",
    "publish:minor": "npx lerna publish minor --yes --force-publish=*",
    "publish:major": "npx lerna publish major --yes --force-publish=*"
  },
  "dependencies": {
    "lerna": "3.13.1",
    "npm-run-all": "4.1.5",
    "npx": "10.2.0"
  }
}
