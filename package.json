{
  "name": "hv-uikit-react",
  "version": "0.3.0",
  "description": "A collection of React Components for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/pentaho/hv-uikit-react",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pentaho/hv-uikit-react.git"
  },
  "scripts": {
    "automation": "npm run automation:run",
    "automation:run": "npx lerna run automation:run --stream",
    "automation:package": "npx lerna run automation:package --stream",
    "clean": "npm-run-all clean:*",
    "clean:package_clean": "npx lerna run clean --parallel",
    "clean:lerna": "npx lerna clean --yes ",
    "bootstrap": "npx lerna bootstrap",
    "dev": "npx lerna run dev --parallel",
    "build": "npx lerna run build",
    "doc": "npx lerna run doc --stream",
    "test": "npx lerna run test --parallel",
    "link": "npx lerna run link",
    "update-uikit-common": "npx lerna run update-uikit-common && npx lerna link",
    "generate": "node generator/index.js",
    "publish-": "npx lerna publish --yes",
    "publish-prerelease": "npx lerna publish prerelease --yes",
    "publish-prepatch": "npx lerna publish prepatch --yes",
    "publish-patch": "npx lerna publish patch --yes",
    "publish-preminor": "npx lerna publish preminor --yes",
    "publish-minor": "npx lerna publish minor --yes",
    "publish-premajor": "npx lerna publish premajor --yes",
    "publish-major": "npx lerna publish major --yes",
    "publish-documentation": "npx storybook-to-ghpages -e packages/doc/dist",
    "lint": "npx eslint ./ --cache --ignore-pattern .gitignore",
    "lint:fix": "npx eslint ./ --cache --ignore-pattern .gitignore --fix",
    "license-check": "npx lerna run license-check"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "storybook-deployer": {
    "gitUsername": "buildguy",
    "gitEmail": "buildguy.pentaho@hitachivantara.com"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@material-ui/core": "^4.9.5",
    "@storybook/storybook-deployer": "^2.8.3",
    "babel-eslint": "^10.1.0",
    "chalk": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.5.0",
    "find-root": "^1.1.0",
    "fs-extra": "^8.1.0",
    "fs-readdir-recursive": "^1.1.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "license-checker": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.2",
    "prettier": "^1.19.1",
    "prompt-input": "^3.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "spdx-correct": "^3.1.0",
    "spdx-satisfies": "^5.0.0"
  }
}
