{
  "name": "hv-uikit-react",
  "version": "0.3.0",
  "description": "A collection of React Components for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/pentaho/hv-uikit-react",
  "license": "Apache-2.0",
  "private": true,
  "author": {
    "name": "Hitachi Vantara UI Kit Team"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pentaho/hv-uikit-react.git"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "lerna bootstrap",
    "dev": "lerna run dev --parallel",
    "build": "lerna run build",
    "doc": "lerna run doc",
    "lint": "lerna run lint --parallel",
    "lint:jenkins": "lerna run lint:jenkins",
    "test": "lerna run test --parallel",
    "link": "lerna run link",
    "publish:prerelease": "lerna publish prerelease --yes",
    "publish:preminor": "lerna publish preminor --yes --force-publish=*",
    "publish:minor": "lerna publish minor --yes --force-publish=*",
    "publish:major": "lerna publish major --yes --force-publish=*"
  },
  "dependencies": {
    "lerna": "3.11.0"
  }
}
