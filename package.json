{
  "name": "hv-uikit-react",
  "private": true,
  "author": "Hitachi Vantara UI Kit Team",
  "description": "The React component library for the Hitachi Vantara Design System.",
  "homepage": "https://github.com/lumada-design/hv-uikit-react",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "pnpm -F='./app' dev",
    "doc": "start-storybook -p 6006 --no-manager-cache",
    "build": "pnpm -r -F=!'./app' -F=!'./toolsn' build",
    "build:doc": "build-storybook",
    "lint": "eslint --ext .ts,.tsx --cache",
    "lint-staged": "lint-staged",
    "format": "npx prettier -w .",
    "test": "pnpm --parallel -F=!'./tools/**' test",
    "test:e2e": "npx playwright test --config=config/playwright.config.ts",
    "clean": "npx rimraf ./{packages,tools}/*/{dist,bin,*.tsbuildinfo}",
    "wipe": "pnpm clean && npx rimraf **/{node_modules,pnpm-lock.yaml}",
    "prepare": "npx husky install",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@playwright/test": "^1.27.1",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/builder-vite": "^0.1.29",
    "@storybook/core-common": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "c8": "^7.12.0",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4",
    "vite": "^3.2.4",
    "vite-tsconfig-paths": "^3.5.2",
    "vitest": "^0.25.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --ext .ts,.tsx --cache",
      "pretty-quick --staged"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=16.16.0"
  }
}
