{
  "name": "@hitachivantara/uikit-icons",
  "version": "5.0.0-next.0",
  "private": false,
  "author": "Hitachi Vantara UI Kit Team",
  "description": "A collection of icons to use with Hitachi Vantara's React Components.",
  "homepage": "https://github.com/lumada-design/hv-uikit-react",
  "main": "./bin/index.ts",
  "sideEffects": false,
  "keywords": [
    "hitachi-vantara",
    "design-system",
    "ui-kit",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lumada-design/hv-uikit-react.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lumada-design/hv-uikit-react/issues"
  },
  "scripts": {
    "build": "run-s clean convert:* build:*",
    "build:ts": "tsc -b",
    "convert": "run-s clean convert:*",
    "convert:optimize": "svgo --config=./svgo.config.js -r -f assets assets",
    "convert:svg": "ts-node -r tsconfig-paths/register src/svgToReact.ts dir --input assets --output bin --force",
    "convert:copy": "npx cpy-cli \"src/IconBase*\" \"bin\"",
    "clean": "npx rimraf ./{dist,bin,*.tsbuildinfo}",
    "install": "pnpm convert"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "dependencies": {
    "@emotion/styled": "^11.10.5",
    "@hitachivantara/uikit-styles": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.8",
    "cpy-cli": "^4.2.0",
    "html-to-react": "^1.5.0",
    "jsdom-no-contextify": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "recursive-readdir": "^2.2.3",
    "svgo": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "yargs": "^17.6.2"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=16.6.0"
  }
}
