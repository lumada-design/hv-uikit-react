{
  "name": "@hitachivantara/app-shell-services",
  "version": "1.1.2",
  "type": "module",
  "private": false,
  "author": "Hitachi Vantara UI Kit Team",
  "description": "AppShell Services",
  "homepage": "https://github.com/pentaho/hv-uikit-react",
  "sideEffects": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pentaho/hv-uikit-react.git",
    "directory": "packages/app-shell-services"
  },
  "bugs": "https://github.com/pentaho/hv-uikit-react/issues",
  "scripts": {
    "build": "npm run clean && vite build",
    "clean": "npx rimraf dist package",
    "prepublishOnly": "npm run build && npx clean-publish",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts",
    "./package.json": "./package.json",
    "./bundles/*": "./dist/bundles/*"
  },
  "publishConfig": {
    "access": "public",
    "directory": "package",
    "module": "dist/esm/index.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/types/index.d.ts",
        "import": "./dist/esm/index.js",
        "default": "./dist/esm/index.js"
      },
      "./package.json": "./package.json",
      "./bundles/*": "./dist/bundles/*"
    }
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package",
    "fields": [
      "main"
    ],
    "files": [
      "tsconfig.json"
    ]
  }
}
