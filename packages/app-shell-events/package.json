{
  "name": "@hitachivantara/app-shell-events",
  "version": "1.0.4",
  "description": "AppShell Events",
  "author": "Hitachi Vantara - Boba Fett Team",
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "module": "dist/esm/index.js",
  "typings": "./dist/dts/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm-run-all clean build:*",
    "build:js": "npx vite build",
    "clean": "npx rimraf ./dist *.tgz tsconfig.tsbuildinfo",
    "dev": "npx vite build --watch",
    "lint-check": "npx eslint --ext .js,.jsx,.ts,.tsx src --color",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "npm run lint-check -- --cache --fix",
    "lint:prettier": "npx prettier --write \"src/**/*.{html,css,js,jsx,ts,tsx}\""
  },
  "dependencies": {
    "@hitachivantara/uikit-react-core": "^5.72.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "vite": "^5.0.4"
  }
}
